<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NetflixCloneMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:NetflixCloneMaui.Pages"
    Shell.TabBarBackgroundColor="#121212"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="#545454"
    Shell.FlyoutBehavior="Disabled"
    Title="NetflixCloneMaui">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="hometab.png"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Games"
            Icon="game.png"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="New &amp; Hot"
            Icon="brand_netflix.png"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Downloads"
            Icon="download.png"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />

    </TabBar>
</Shell>
